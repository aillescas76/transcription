QMainWindow {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #141414, stop:1 #353535);
}
QPushButton {
    border: none;
    border-radius: 8px;
    padding: 10px 18px;
    background-color: #5B86E5;
    color: #FFFFFF;
    font: bold 14px "Segoe UI";
}
QPushButton:hover {
    background-color: #4a70c9;
}
QTextEdit {
    background-color: #2a2a2a;
    color: #e0e0e0;
    border: 1px solid #555555;
    border-radius: 4px;
    padding: 8px;
    font: 13px "Segoe UI";
}
QLabel {
    font: 13px "Segoe UI";
    color: #e0e0e0;
}
