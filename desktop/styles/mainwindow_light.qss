QMainWindow {
    background-color: #f0f0f0;
}
QPushButton {
    border: none;
    border-radius: 8px;
    padding: 10px 18px;
    background-color: #1976d2;
    color: #FFFFFF;
    font: bold 14px "Segoe UI";
}
QPushButton:hover {
    background-color: #1361a8;
}
QTextEdit {
    background-color: #ffffff;
    color: #000000;
    border: 1px solid #cccccc;
    border-radius: 4px;
    padding: 8px;
    font: 13px "Segoe UI";
}
QLabel {
    font: 13px "Segoe UI";
    color: #000000;
}
