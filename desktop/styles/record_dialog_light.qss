QDialog {
    background-color: #ffffff;
    border-radius: 8px;
}
QPushButton {
    border: none;
    border-radius: 8px;
    padding: 10px 18px;
    background-color: #1976d2;
    color: #ffffff;
    font: bold 14px "Segoe UI";
}
QPushButton:hover {
    background-color: #1361a8;
}
QComboBox {
    font: 13px "Segoe UI";
    border: 1px solid #cccccc;
    border-radius: 4px;
    padding: 6px;
    background-color: #f9f9f9;
    color: #000000;
}
QLabel {
    font: 13px "Segoe UI";
    color: #000000;
}
